<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.appcompat.widget.LinearLayoutCompat">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/dialogPickerFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bg_chip_filter_input"
        android:hint="@string/dialog_chips_picker_filter_hint"
        android:paddingStart="@dimen/spacing_size_medium"
        android:paddingTop="@dimen/spacing_size_small"
        android:paddingEnd="@dimen/spacing_size_medium"
        android:paddingBottom="@dimen/spacing_size_small" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/spacing_size_small"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/icon_add"
        android:tint="?colorAccent"
        tools:tint="#000" />
</merge>
